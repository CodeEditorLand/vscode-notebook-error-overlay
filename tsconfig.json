{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2023",
    "outDir": "dist",
    "lib": ["ES2023", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "moduleResolution": "bundler",
    "jsxFactory": "h"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
